{
  "name": "dad-first-step",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install",
    "clean": "rimraf .next",
    "reset": "npm run clean && npm cache clean --force && npm install",
    "export": "next export"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "latest",
    "framer-motion": "^11.18.0",
    "next": "latest",
    "next-themes": "^0.4.4",
    "react": "latest",
    "react-dom": "latest",
    "react-error-boundary": "^5.0.0",
    "react-icons": "^5.4.0",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.6.0",
    "zustand": "latest"
  },
  "devDependencies": {
    "@types/react": "latest",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "firebase-tools": "^13.29.1",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "tailwindcss": "latest",
    "typescript": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
